<% if flash[:errors]  %>
    <ul>
    <% flash[:errors].each do |error| %>
        <li style="color: red">
            <%= error%>
        </li>
    <% end %>
    </ul>
<% end %>

<%= form_for(@school_class) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :room_number %>
    <%= f.text_field :room_number %>
    <%= f.submit %>
<% end %>